            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "id": {
                      "type": "integer"
                    },
                    "summary": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },

                    "deadline": {
                      "type": "string"
                    },
                    "employeeId": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "id": 1,
                  "summary": "Task 1 Summary",
                  "description": "Task 1 Description",
                  "status": "Done",
                  "employeeId": 22,
                  "deadline": "2023-03-28"
                }
              }
            }
          },
          "500": {
