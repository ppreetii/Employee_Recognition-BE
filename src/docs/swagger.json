              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "message": {
                      "type": "string"
                    },
                    "reason": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "messsage": "Error",
                  "reason": "Task Not Found"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes a Task by id",
        "tags": ["Tasks"],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "security": [
          {
            "api_key": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "taskId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "The Task id"
          }
        ],
        "responses": {
          "204": {
