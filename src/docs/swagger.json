{
  "openapi": "3.0.0",
  "info": {
    "title": "Employee Reward Sytem",
    "description": "This system has shows results for logged-in employee, his/her assigned tasks, and the Rewards Info - Employee of the day, Employee of the Week,and Employee of The Month",
    "version": "1.0.0",
    "contact": {
      "name": "Preeti Gupta",
      "email": "ppreeti.guptaa@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1.0",
      "description": "Local server"
    }
  ],
  "paths": {
    "/rewards/{rewardType}?date={date}": {
      "get": {
        "summary": "Returns Employee Information For Employee of Day",
        "tags": ["Rewards"],
        "description": "This API will return Employee For Given Reward Type.",
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "security": [
          {
            "api_key": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "rewardType",
            "required": true,
            "schema": {
              "enum": [
                "employee-of-the-day",
                "employee-of-the-week",
                "employee-of-the-month"
              ]
            },
            "description": "Reward Type"
          },
          {
            "in": "path",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Date for which to find Reward"
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON object of Employee of Day",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmpOfDay"
                },
                "example": {
                  "rewardType": "employee-of-the-day",
                  "data": {
                    "id": 20,
                    "name": "Employee 20",
                    "designation": "Marketing Manager",
                    "email": "employee.20@peaksoft.com",
                    "date": "2022-02-22"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/employees": {
      "post": {
        "summary": "Create New Employee",
        "tags": ["Employees"],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "security": [
          {
            "api_key": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "email": {
                    "type": "string",
                    "required": true
                  },
                  "designation": {
                    "type": "string",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "A json object of Employee details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "designation": {
                      "type": "string"
                    },
                    "bonusStars": {
                      "type": "integer"
                    },
                    "empOfDayCount": {
                      "type": "integer"
                    },
                    "empOfWeekCount": {
                      "type": "integer"
                    },
                    "empOfMonthCount": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "id": "EMPK-1",
                  "name": "Employee 1",
                  "email": "employee.1@peaksoft.com",
                  "designation": "Accountant",
                  "bonusStars": 0,
                  "empOfDayCount": 0,
                  "empOfWeekCount": 0,
                  "empOfMonthCount": 0
                }
              }
            }
          },
          "500": {
            "description": "A json object of error details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "message": {
                      "type": "string"
                    },
                    "reason": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "messsage": "Error",
                  "reason": "\"name\" must be a string ; \"email\" must be a valid email ; \"designation\" must be a string"
                }
              }
            }
          }
        }
      }
    },
    "/employees/{employeeId}": {
