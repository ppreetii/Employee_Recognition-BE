        },
        "security": [
          {
            "api_key": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "designation": {
                    "type": "string",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A json object of Employee details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "designation": {
                      "type": "string"
                    },
                    "bonusStars": {
                      "type": "integer"
                    },
                    "empOfDayCount": {
                      "type": "integer"
                    },
                    "empOfWeekCount": {
                      "type": "integer"
                    },
                    "empOfMonthCount": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "id": "EMPK-1",
                  "name": "Employee 1",
                  "email": "employee.1@peaksoft.com",
                  "designation": "Accountant",
                  "bonusStars": 345,
                  "empOfDayCount": 16,
                  "empOfWeekCount": 4,
                  "empOfMonthCount": 0
                }
              }
            }
          },
          "500": {
            "description": "A json object of error details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "message": {
                      "type": "string"
                    },
                    "reason": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "messsage": "Error",
                  "reason": "\"id\" must be a number ; \"designation\" must be a string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deletes an Employee by id",
        "tags": ["Employees"],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "security": [
          {
            "api_key": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "The Employee id"
          }
        ],
        "responses": {
          "204": {
            "description": "Delete was successful."
          },
          "500": {
            "description": "Employee not found."
          }
        }
      }
    },
    "/employees/{employeeId}/tasks": {
      "get": {
        "summary": "Returns All tasks assigned to an employee",
        "tags": ["Employees"],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "security": [
          {
            "api_key": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "employeeId",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "The Employee ID"
          }
        ],
        "responses": {
          "200": {
            "description": "An json object with an array of all tasks of an employee",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmpTask"
                },
                "example": {
                  "tasks": [
                    {
                      "id": 607,
                      "summary": "Task 607 Summary",
                      "status": "ToDo",
                      "date_assigned": "2022-07-21",
                      "deadline": "2022-07-24",
                      "date_completed": "1970-01-01"
                    },
                    {
                      "id": 965,
                      "summary": "Task 965 Summary",
                      "status": "Done",
                      "date_assigned": "2022-11-23",
                      "deadline": "2022-11-25",
                      "date_completed": "1970-01-01"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/tasks": {
      "post": {
        "summary": "Create New Task",
        "tags": ["Tasks"],
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "security": [
          {
            "api_key": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "summary": {
                    "type": "string",
                    "required": true
                  },
                  "description": {
                    "type": "string"
                  },
                  "employeeId": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "deadline": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "A json object of Task details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "id": {
                      "type": "integer"
                    },
                    "summary": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "status": {
                      "enum": ["ToDo", "InProgress", "Done"]
                    },
                    "employeeId": {
                      "type": "integer"
                    },
                    "deadline": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": 1,
                  "summary": "Task 1 Summary",
                  "description": "Task 1 Description",
                  "status": "ToDo",
                  "employeeId": 32,
                  "deadline": "2023-05-08"
                }
              }
            }
          },
          "500": {
            "description": "A json object of error details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "message": {
                      "type": "string"
                    },
                    "reason": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "messsage": "Error",
                  "reason": "\"summary\" must be a string ; \"description\" must be a string ; \"deadline\" must be greater than or equal to \"2023-05-05T00:00:00.000Z\" ; \"employeeId\" must be an integer"
                }
              }
            }
          }
        }
      }
    },
